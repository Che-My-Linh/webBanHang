@model _20T1020441.DomainModels.Customer
@{
    ViewBag.Title = $"Xóa {Model.CustomerName}";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Customer/Delete/@Model.CustomerID">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Khách hàng</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CustomerName</p>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Tên liên lạc</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.PostalCode</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Country</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Password</p>
                </div>
            </div>
            @* đây là hai nút trong Bổ sung DL*@
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-floppy-disk"></i> đông ý xóa
                    </button>

                    <a href="~/Customer" class="btn btn-warning">
                        quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>

