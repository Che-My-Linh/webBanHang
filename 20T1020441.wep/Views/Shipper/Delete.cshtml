@model _20T1020441.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Shipper/Delete/@Model.ShipperID">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Người giao hàng</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            @* đây là hai nút trong Bổ sung DL*@
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-floppy-disk"></i> đông ý xóa
                    </button>

                    <a href="/Shipper" class="btn btn-warning">
                        quay lai
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>

