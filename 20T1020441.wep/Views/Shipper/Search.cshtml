@model _20T1020441.Web.Models.ShipplerSearchOutput

@{
    Layout = null;
}
<p>Có <strong>@string.Format("{0:N0}", Model.Rowcount)</strong> người giao hàng trong tổng số <strong>@string.Format("{0:N0}", @Model.PageCount) </strong>trang</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="bg-primary">
            <th>Tên người giao hàng</th>
            <th>Số điện thoại</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>

                <td>@item.ShipperName</td>
                <td>@item.Phone</td>
                <td class="text-right">
                    <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-success">
                        <i class="glyphicon glyphicon-edit" title="Sửa"></i>
                    </a>
                    <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash" title="xóa"></i>
                    </a>
                </td>
            </tr>
        }


    </tbody>
</table>

<div class="col-sm-7 text-center">
    <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="paginate_button active">
                        <a href="#">@i</a>
                    </li>
                }
                else
                {
                    <li class="paginate_button">
                        <a href="javascript:;" onclick="doSearch(@i)">@i</a>
                    </li>
                }

            }
        </ul>
    </div>
</div>




