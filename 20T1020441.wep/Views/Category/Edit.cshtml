@model _20T1020441.DomainModels.Category
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Save" method="post">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CategoryID)

            <div class="form-group">
                <label class="control-label col-sm-2">Tên Loại hàng</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#DC143C;" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#DC143C;" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Nguồn gốc</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ParentCategoryId, new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(m => m.ParentCategoryId, "", new { @style = "color:af00;" })*@
                </div>
            </div>



            @* đây là hai nút trong Bổ sung DL*@
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i> lưu dữ liệu
                    </button>

                    <a href="~/Category" class="btn btn-warning">
                        quay lại
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>

