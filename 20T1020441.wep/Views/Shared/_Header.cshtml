<header class="main-header">
    <!-- Logo -->
    <a href="~/" class="logo">
        <span class="logo-mini"><b>M</b>L</span>
        <span class="logo-lg"><b>ML</b> Shop</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

                <!-- User Account: style can be found in dropdown.less -->
               @{ 
                   var userAccount = _20T1020441.Web.Converter.CookieToUserAccount(User.Identity.Name);
                }
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Photo/@userAccount.Photo" class="user-image" alt="User Image">
                        <span class="hidden-xs">@userAccount.FullName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/Photo/@userAccount.Photo" class="img-circle" alt="User Image">
                            <p>@userAccount.FullName</p>
                        </li>

                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="~/Account/ChangePassword" class="btn btn-default btn-flat">Change Password</a>
                            </div>

                            <div class="pull-right">
                                <a href="~/Account/Logout" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->

            </ul>
        </div>
    </nav>
</header>