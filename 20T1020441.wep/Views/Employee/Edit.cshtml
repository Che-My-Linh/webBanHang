@model _20T1020441.DomainModels.Employee

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/ActionResult/Save" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.FilmID)

            <div class="form-group">
                <label class="control-label col-sm-2" for="email" style="font-size: small">Poster</label>
                <div class="col-sm-10">
                    <img id="Poster " src="~/Photo/@Model.Photo"
                         class="profile-user-img "
                         alt="Poster  Image">
                    @Html.HiddenFor(m => m.Poster)
                    <input type="file"
                           style="margin-top: 8px"
                           name="uploadPhoto"
                           onchange="document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mã phim</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FilmID, new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FilmID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên phim</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FilmName, new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FilmName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Đạo diễn</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Director, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Director, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Diễn viên</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Performer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Performer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Ngày chiếu</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           name="ShowTime"
                           value="@string.Format("{0:dd/MM/yyyy}",Model.ShowTime )" />
                    
                    @Html.ValidationMessageFor(m => m.ShowTime, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.ShowTime)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Thời lượng</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mô tả phim</label>
                <div class="col-sm-10">

                    <input type="text" class="form-control" id="Notes" name="Notes" value="@Model.Notes" placeholder="">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email" style="font-size: small">Trailer</label>
                <div class="col-sm-10">
                    <video id="Photo" class="profile-user-img"
                           style="height: 360px; width: 400px"
                           src="~/Photo/@Model.Trailer"
                           type="video/mp4" controls autoplay>
                    </video>
                    @Html.HiddenFor(m => m.Trailer)
                    <input type="file"
                           style="margin-top: 8px"
                           name="uploadPhoto"
                           onchange="document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])"

                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-save"></i> Lưu dữ liệu</button>
                    <a href="~/ActionResult " class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>