@model _20T1020441.DomainModels.Employee
@{
    ViewBag.Title = $"Xóa {Model.EmployeeID}";
}


<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID">

            <div class="form-group">
                <label class="control-label col-sm-2">Họ đệm</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Notes</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Password</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh</label>
                <div class="col-sm-10">
                    <p class="form-control-static"><img src="@Model.Photo" class="img-rounded" style="width:70%"></p>
                </div>
            </div>

            @* đây là hai nút trong Bổ sung DL*@
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-floppy-disk"></i> đông ý xóa
                    </button>

                    <a href="/Employee" class="btn btn-warning">
                        quay lai
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>

